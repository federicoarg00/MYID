# Production Environment Variables for Coolify
# Copy this file and configure with your actual values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Stripe Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_publishable_key
STRIPE_SECRET_KEY=sk_live_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Application
NEXT_PUBLIC_APP_URL=https://myid.yourdomain.com

# Node Environment
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# Email Service (Optional - Resend recommended)
RESEND_API_KEY=re_your_resend_api_key
# Alternative: SendGrid
# SENDGRID_API_KEY=SG.your_sendgrid_api_key

# SMS Service (Optional - Twilio for emergency features)
TWILIO_ACCOUNT_SID=ACyour_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Google Maps API (Optional - for location features)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=AIzaYour_google_maps_api_key

# Security (Optional)
# SESSION_SECRET=your_very_long_random_session_secret

# Monitoring (Optional)
# SENTRY_DSN=https://your_sentry_dsn
